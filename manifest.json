{
  "default_locale": "vi",
  "manifest_version": 3,
  "name": "AmoNexus",
  "version": "3.5",
  "description": "The Neural Nexus for Your Second Brain.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "alarms",
    "contextMenus",
    "notifications",
    "sidePanel",
    "identity",
    "management"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*",
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "config/build_flags.js",
        "utils/console_guard.js",
        "services/nudge_engine.js",
        "ui/components/nudge.js",
        "content.js",
        "bridge/nlm_floating_button.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://notebooklm.google.com/*"
      ],
      "js": [
        "config/build_flags.js",
        "utils/console_guard.js",
        "bridge/nlm_passive_learning.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "open-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open ATOM Active Reading sidepanel"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "i18n_bridge.js",
        "MicroClosureRenderer.js",
        "styles/micro_closure.css.js",
        "styles/srq.css.js",
        "ui/components/srq_widget.js",
        "storage/reading_session.js",
        "_locales/*/messages.json",
        "icons/focus_bg.jpg",
        "icons/rain.mp3",
        "icons/forest.mp3",
        "icons/light_rain.mp3"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}